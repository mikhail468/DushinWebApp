                                        <a class="nav-link text-white bold" asp-action="About" asp-controller="Home">About</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-white bold" asp-action="Contact" asp-controller="Home">Contact</a>
                                    </li>
                                </ul>
                            </div>
                            <!--end of col-->
                            <div class="col-6">
                                <h6 class="text-white bold">Policy</h6>
                                <ul class="list-unstyled">
                                    <li>
                                        <a class="nav-link text-white bold" asp-action="PrivacyPolicy" asp-controller="Home">Privacy Policy</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-white bold" asp-action="TermsOfUse" asp-controller="Home">Terms of Use</a>
                                    </li>
                                </ul>
                            </div>
