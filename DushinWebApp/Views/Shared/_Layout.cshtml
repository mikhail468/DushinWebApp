                                        <a href="#">About company</a>
                                    </li>
                                    <li>
                                        <a href="#">History</a>
                                    </li>
                                    <li>
                                        <a href="#">Team</a>
                                    </li>
                                    <li>
                                        <a href="#">Investment</a>
                                    </li>
                                </ul>
                            </div>*@
                            <!--end of col-->
                        </div>
                        <!--end of row-->
                    </div>
                    <!--end of col-->
                </div>
                <!--end of row-->
            </div>
            <!--end of container-->
        </footer>
    </div>
    
    
    <script src="~/Script/script.js"></script>
        <script src="~/Script/tether.js"></script>
</body>
</html>
