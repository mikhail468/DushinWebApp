@model LocationHomeViewModel
<style>
    .carousel-caption {
        top: 0;
        bottom: auto;
    }
</style>
<section class="bg-white fullwidth-split">
    <div class="container-fluid">
        <div id="carouselExampleControls" class="carousel slide bg-dark" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="https://dushintravelappstorage.blob.core.windows.net/travelappcontainer/staticImages/gold_coast.jpg" alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5 class="display-4">Gold Coast</h5>
                                <p class="lead">Become inspired to visit the Gold Coast in Queensland, Australia. Discover fantastic things to do, places to go & more</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://dushintravelappstorage.blob.core.windows.net/travelappcontainer/staticImages/brisbane.jpg" alt="Second slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5 class="display-4">Brisbane</h5>
                                <p class="lead">Looking for things to do and events in Brisbane? Visit Brisbane is loaded with great ideas</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://dushintravelappstorage.blob.core.windows.net/travelappcontainer/staticImages/perth.jpg" alt="Third slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5 class="display-4">Perth</h5>
                                <p class="lead">Embrace the best of both worlds in Perth, where soft-sand beaches and scenic parks meet a thriving metropolis of small bars, creative restaurants and curated street art</p>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
</section>
<section>
    <div class="container">
        <div class="row text-center justify-content-center">
            <div class="col col-12 col-md-9 col-lg-8">
                <h2 class="display-4">NSW stays</h2>
                <p class="lead">Find the best NSW destinations with Grande Travel. Search a fantastic range of NSW destinations and book your best escape.</p>
            </div>
        </div>
        <div class="row text-center justify-content-center">
            <div class="card border-0 col-md-3 bg-light">
                @if (Model.LocationNsw[0] != null)
                {
                    <a class="card" asp-action="Details" asp-controller="Location" asp-route-name="@Model.LocationNsw[0].Name">
                        <img class="d-block p-0 w-100" style="max-width:350px;min-height:200px" src="https://dushintravelappstorage.blob.core.windows.net/travelappcontainer/uploads/@Model.LocationNsw[0].Picture">
                        <div class="card-img-overlay text-white">
                            <h2 class="card-title">@Model.LocationNsw[0].Name</h2>
                        </div>
                    </a>
                }
                else
                {
                    <img class="d-block img-fluid p-0 w-100" src="http://placehold.it/350x180?text=6">

                    <div class="card-img-overlay">
                        <h2 class="card-title">Title</h2>
                    </div>}
