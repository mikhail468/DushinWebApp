@model AccountProviderPackagesViewModel

<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col card-body">
                <h1 class="display-4 text-indigo">@User.Identity.Name packages</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-3 col-lg-4">
                <p class="lead">Packages available: @Model.Total</p>
            </div>
            @*<div class="col-12 col-md-3 col-lg-2">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Filter
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-action="Details" asp-controller="Location" asp-route-name="@Model.Name" asp-route-sorting="hight">Highest price</a>
                        <a class="dropdown-item" asp-action="Details" asp-controller="Location" asp-route-name="@Model.Name" asp-route-sorting="low">Lowest price</a>
                    </div>
                </div>
            </div>*@
        </div>
        <div class="row">

            @foreach (var item in Model.Packages)
            {<div class="col-md-3">
                    <div class="card">
                        <a asp-action="Details" asp-controller="Package" asp-route-name="@item.Name">
                            <img class="d-block w-100" src="https://dushintravelappstorage.blob.core.windows.net/travelappcontainer/uploads/@item.Picture" alt="slide 1">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">$@item.Price</p>
                            <a asp-action="Details" asp-controller="Package" asp-route-name="@item.Name" class="btn btn-primary">More</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
