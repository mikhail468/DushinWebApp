@model PackageUpdateViewModel

    <section>
        <div class="container">
            <div class="row text-center justify-content-center">
                <div class="col-12 col-md-7 card-body bg-secondary">
                    <div class="text-center mb-5">
                        <h1 class="h2 mb-6 text-green">Update package</h1>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-9">
                            <form asp-action="Update" asp-controller="Package" method="post" enctype="multipart/form-data">
                                <div class="text-red" asp-validation-summary="ModelOnly"> </div>

                                <div>
                                    <h5 class="text-red">  @ViewBag.MyMessage </h5>
                                </div>

                                <div>
                                    <input type="hidden" asp-for="PackageId" readonly/>
                                </div>

                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="Name">Name<sup>*</sup></label>
                                        <input required asp-for="Name" class="form-control form-control-lg" />
                                        <span class="text-red" asp-validation-for="Name"></span>
                                    </div>
                                    </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="LocName">Location<sup>*</sup></label>
                                        <input required asp-for="LocName" class="form-control form-control-lg" />
                                        <span class="text-red" asp-validation-for="LocName"></span>
                                    </div>
                                    </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="LocState">State<sup>*</sup></label>
                                        <input required asp-for="LocState" class="form-control form-control-lg" />
                                        <span class="text-red" asp-validation-for="LocState"></span>
                                    </div>
                                    </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="Price">Price<sup>*</sup></label>
                                        <input required asp-for="Price" class="form-control form-control-lg" />
                                        <span class="text-red" asp-validation-for="Price"></span>
                                    </div>
                                    </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="Description">Description<sup>*</sup></label>
                                        <input required asp-for="Description" class="form-control form-control-lg" />
                                        <span class="text-red" asp-validation-for="Description"></span>
                                    </div>
                                    </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="Picture">Picture</label>
                                        <input type="file" name="file" />
                                    </div>
                                    </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="Active">Active</label>
                                        <input type="checkbox" asp-for="Active" value="true" />
                                    </div>
                                    </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <button class="btn btn-block btn-success btn-lg" type="submit">Update</button>
                                    </div>
                                    </div>
</form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


